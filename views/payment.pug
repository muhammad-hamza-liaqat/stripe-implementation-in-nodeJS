doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title payment_details
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #73C6B6; 
        margin: 0;
        padding: 0;
        height: 100vh;
        position: relative;
      }
      form {
        background-color: #fff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        width: 600px;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      }
      .input-group {
        width: 45%;
      }
      label {
        font-weight: bold;
        margin-bottom: 8px;
        display: block;
      }
      input[type="text"],
      input[type="number"],
      input[type="tel"],
      input[type="email"],
      input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
      }
      input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
      }
      input[type="submit"]:hover {
        background-color: #45a049;
      }
      .error-message {
        color: #ff0000;
        margin-top: 5px;
      }
  body
    form(action="/api/payment/create-payment-intent", method="POST")
      .input-group.left
        label(for="name") Name:
        input(type="text", id="name", name="name", required)
        label(for="email") Email:
        input(type="email", id="email", name="email", required)
      .input-group.right
        label(for="amount") Amount:
        input(type="number", id="amount", name="amount",  required)
        label(for="currency") Currency:
        input(type="text", id="currency", name="currency",  required)
        label(for="cardNumber") Card Number:
        input(type="text", id="cardNumber", name="cardNumber",  required)
        label(for="expMonth") Expiration Month:
        input(type="number", id="expMonth", name="expMonth",  required)
        label(for="expYear") Expiration Year:
        input(type="number", id="expYear", name="expYear",  required)
        label(for="cvc") CVC:
        input(type="text", id="cvc", name="cvc",  required)
      input(type="submit", value="Submit")
